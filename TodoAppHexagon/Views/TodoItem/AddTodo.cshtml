@model TodoAppHexagon.Core.DTOs.CreateTodoItemDto

<h2>Create a New Todo Item</h2>

<form method="post" asp-controller="TodoItem" asp-action="AddTodo">
    @Html.AntiForgeryToken()

    <div class="mb-3">
        <label asp-for="@Model.Title" class="form-label">Title</label>
        <input asp-for="@Model.Title" name="Title" class="form-control" type="text"/>
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="@Model.IsCompleted" class="form-label">Status</label>
        <input asp-for="@Model.IsCompleted" name="IsCompleted" class="form-control" type="text" />
        <span asp-validation-for="IsCompleted" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <button type="submit" class="btn btn-primary">Submit</button>

    </div>
</form>