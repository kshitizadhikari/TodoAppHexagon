@model IEnumerable<TodoAppHexagon.Core.DTOs.TodoItemDto>
@{
    ViewData["Title"] = "Todo Index";
}

<div class="mb-5">
    <h1>Todo Index Page</h1>
</div>

<div>
    <div class="mb-3">
        <button>
            <a class="nav-link text-dark" asp-area="" asp-controller="TodoItem" asp-action="AddTodo">Add Todo</a>
        </button>
    </div>

</div>
<div>
    <table class ="table table-hover">
        <thead>
        <tr class="table-dark">
            <th>Title</th>
            <th>IsCompleted</th>
            <th>Action</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var todo in Model)
        {
            <tr class="table-primary">
                <td>@todo.Title</td>
                <td>@todo.IsCompleted</td>
                <td>
                    <a asp-area="" asp-controller="TodoItem" asp-action="UpdateTodo" asp-route-id="@todo.Id">Edit</a> |
                    <a asp-area="" asp-controller="TodoItem" asp-action="DeleteTodo" asp-route-id="@todo.Id">Remove</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>

